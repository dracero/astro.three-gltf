<p id="displayCount" style="font-size: 2em;"></p>
<button id="saveStorage">Guardar en Storage</button>
<button id="readStorage">Leer de Storage</button>

<script>
  //@ts-nocheck
  import { isOpen } from "./store.js";
  let count;
  isOpen.subscribe((value) => {
    count = value;
    document.getElementById("displayCount").innerText = count;
  });

  document.getElementById("saveStorage").addEventListener("click", function() {
    localStorage.setItem("count", count);
  });

  document.getElementById("readStorage").addEventListener("click", function() {
    let storedCount = localStorage.getItem("count");
    if (storedCount) {
      count = storedCount;
      document.getElementById("displayCount").innerText = count;
    }
  });

  // Para guardar y leer de un archivo, necesitar√°s un servidor o alguna API que maneje las operaciones de archivos.
</script>