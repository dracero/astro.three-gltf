---
import Ver from "./Ver.astro";
import Base from "./Base.astro";
---

<button id="incremento">Increment</button>
<button id="decremento">Decrement</button>
<Ver />
<Base />
<p></p>
<a href="/">Inicio</a>

<script>
    //acá es dónde llamo al contador
    //@ts-nocheck
    import { increment, decrement } from "./counter.js"
    // Set the store to true when the button is clicke
    function incre() {
        increment();
    }
    function decre() {
        decrement();
    }

    // Add an event listener to the button
    document.getElementById("incremento").addEventListener("click", incre);
    document.getElementById("decremento").addEventListener("click", decre);
</script>